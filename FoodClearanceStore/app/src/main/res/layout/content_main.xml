<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/download"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:weightSum="1">

    <TextView android:text="Why this app ???" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="0.04" />

    <TextView android:text="Using this app, Store Owner can notify the customers who subscribed for your store about the current product sales..
You can start using this by clicking on sign up.." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/bLoginP"
        android:text="Log in"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bRegisterP"
        android:text="Sign up"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>






